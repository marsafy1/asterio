{
    "manifest_version": 2,
    "name": "Asterio",
    "version": "1.0",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "tabs",
      "http://*/",
      "https://*/"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_security_policy": "script-src 'self'; object-src 'self'"
}  