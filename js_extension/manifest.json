{
    "manifest_version": 3,
    "name": "My Chrome Extension",
    "version": "1.0",
    "description": "An example Chrome extension.",
    "permissions": [
        "activeTab",
        "https://www.virustotal.com/"
      ],
    "background": {
        "service_worker": "background.js"
      },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "type": "module"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["utils.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }